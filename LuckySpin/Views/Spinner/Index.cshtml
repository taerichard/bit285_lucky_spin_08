@model LuckySpin.ViewModels.IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<h2>Choose your Number and Starting Balance</h2>
<form asp-route="Spinner/Index">
    <fieldset>
        <label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </label>
        <label>
            <select asp-for="Luck">
                <option selected disabled>Luck Number</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
            <span asp-validation-for="Luck"></span>
        </label>
        <label>
            $&nbsp;<input asp-for="StartingBalance" class="currency" />
            <span asp-validation-for="StartingBalance"></span>
        </label>

    </fieldset>
    <input type="submit" value="Start the Game" />
</form>